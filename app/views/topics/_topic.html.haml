%tr
  %td.title
    = render 'shared/nav/controls', :resource => topic
    %h3= link_to topic.title, topic
    %p= topic.user.username
  %td.posts_count= topic.posts_count
  %td.views_count= topic.views_count
  %td.activity
    = link_to topic.title, collection_link(topic.last_post)
    by
    = topic.last_post.user.username
    at
    %time{ :datetime => topic.last_post.created_at.strftime('%Y-%m-%dT%H:%M:%S'), :class => 'created' }
      = l topic.last_post.created_at, :format => :long